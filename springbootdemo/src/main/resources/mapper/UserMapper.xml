<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yiban.springbootdemo.mapper.UserMapper">

    <insert id="insertUser" parameterType="com.yiban.springbootdemo.entity.User">
        INSERT INTO user (username, password)
        VALUES (#{username}, #{password})
    </insert>

    <select id="selectByUsername" resultType="com.yiban.springbootdemo.entity.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="selectAll" resultType="com.yiban.springbootdemo.entity.User">
        SELECT * FROM user
    </select>
</mapper>